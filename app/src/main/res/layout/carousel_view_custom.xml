<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/carousel_title"
        android:text="Lorem ipsum dolor sit amet"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="32dp"/>

    <TextView
        android:id="@+id/carousel_text"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis quam urna, sollicitudin eget elit a, aliquet mattis felis."
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"/>

    <ImageView
        android:id="@+id/carousel_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"/>

</LinearLayout>